#!/usr/bin/env sh
# vim:ft=sh:et:ts=4:sw=4:sts=4:
#
# Source: https://askubuntu.com/questions/645/how-do-you-reset-a-usb-device-from-the-command-line
# @TamÃ¡s Tapsonyi

for i in /sys/bus/pci/drivers/[uoex]hci_hcd/*:*; do
    [ -e "$i" ] || continue
    echo "${i##*/}" >"${i%/*}/unbind"
    echo "${i##*/}" >"${i%/*}/bind"
done
